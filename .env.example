# ═══════════════════════════════════════════════════
#  IoT IDS Platform — Environment Variables
# ═══════════════════════════════════════════════════

# ── Database ─────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://iot_admin:iot_secure_pass@postgres:5432/iot_ids
DATABASE_URL_SYNC=postgresql://iot_admin:iot_secure_pass@postgres:5432/iot_ids
POSTGRES_DB=iot_ids
POSTGRES_USER=iot_admin
POSTGRES_PASSWORD=iot_secure_pass

# ── Redis ────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── JWT Auth ─────────────────────────────────────
JWT_SECRET_KEY=change-me-to-a-real-256-bit-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Model Paths ──────────────────────────────────
MODEL_PATH=/app/models/cnn_lstm_global_with_HE_25rounds_16k.pt
SCALER_PATH=/app/models/standard_scaler.pkl
DEFAULT_THRESHOLD=0.5
SEQUENCE_LENGTH=10
NUM_FEATURES=78

# ── FL Server ────────────────────────────────────
FL_SERVER_HOST=fl_server
FL_SERVER_PORT=8080
FL_NUM_ROUNDS=25
FL_MIN_CLIENTS=2

# ── HE Parameters ───────────────────────────────
HE_SCHEME=ckks
HE_POLY_MODULUS=16384
HE_GLOBAL_SCALE=1099511627776

# ── App ──────────────────────────────────────────
APP_NAME=IoT IDS Platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=info
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
